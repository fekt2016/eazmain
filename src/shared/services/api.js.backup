}

// Request interceptor
api.interceptors.request.use(async (config) => {
  // Always use fresh baseURL to ensure it's up-to-date
  const freshBaseURL = getBaseURL();
  config.baseURL = freshBaseURL;
  
  // CRITICAL: Force HTTP for localhost URLs (never HTTPS)
  if (config.baseURL && (config.baseURL.includes('localhost') || config.baseURL.includes('127.0.0.1') || config.baseURL.includes(':4000'))) {
    config.baseURL = config.baseURL.replace(/^https:\/\//i, 'http://');
    if (!config.baseURL.startsWith('http://') && !config.baseURL.startsWith('https://')) {
      config.baseURL = 'http://' + config.baseURL.replace(/^\/\//, '');
    }
    console.log('[API Request Interceptor] üîí Forced HTTP baseURL:', config.baseURL);
  }
  
  // Also check the full URL if it's absolute
  if (config.url && config.url.startsWith('http') && (config.url.includes('localhost') || config.url.includes('127.0.0.1') || config.url.includes(':4000'))) {
    config.url = config.url.replace(/^https:\/\//i, 'http://');
    console.log('[API Request Interceptor] üîí Forced HTTP url:', config.url);
  }
  
  const relativePath = getRelativePath(config.url);
  const normalizedPath = normalizePath(relativePath);
  const method = config.method ? config.method.toLowerCase() : "get";

  // Log request details in development
  if (import.meta.env.DEV) {
    const fullURL = config.url.startsWith('http') 
      ? config.url 
      : `${config.baseURL}${config.url}`;
    console.log(`[API Request] ${method.toUpperCase()} ${fullURL}`);
    console.log(`[API Request] baseURL: ${config.baseURL}, url: ${config.url}`);
    console.log(`[API Request] withCredentials: ${config.withCredentials}, timeout: ${config.timeout}`);
  }

  logger.debug(`[API] ${method.toUpperCase()} ${normalizedPath}`);

  // Skip authentication for public routes
  if (isPublicRoute(normalizedPath, method)) {
    return config;
  }

  // Cookie-based authentication: JWT is automatically sent via withCredentials: true
  // Backend will read from req.cookies.jwt
  // No need to manually attach Authorization header - cookie is sent automatically
  logger.debug(`[API] Cookie will be sent automatically for ${method.toUpperCase()} ${normalizedPath}`);

  // CSRF protection temporarily disabled for testing

  return config;
});

// Helper to check if URL is a notification endpoint
// STEP 3: Do NOT auto-logout on 401 for notification endpoints
const isNotificationEndpoint = (url) => {
  if (!url) return false;
  const normalizedUrl = url.toLowerCase();
  return (
    normalizedUrl.includes('/notifications') ||
    normalizedUrl.includes('/notification/') ||
    normalizedUrl.includes('/notifications/read/') ||
    normalizedUrl.includes('/notifications/unread')
  );
};

// Response interceptor
api.interceptors.response.use(
  (response) => {
    return response;
  },
  async (error) => {
    const url = error.config?.url || '';
    const status = error.response?.status;
    const isNotification = isNotificationEndpoint(url);
    
    // CSRF protection temporarily disabled for testing

    // Enhanced error logging with notification-specific logging
    if (isNotification) {
      console.log('[API] üîî Notification endpoint error:', {
        url,
        status,
        method: error.config?.method,
        message: error.response?.data?.message || error.message,
        hasCookie: document.cookie.includes('jwt'),
      });
    }

    // Enhanced error logging with grouped console output
    if (import.meta.env.DEV) {
      const fullURL = error.config?.url 
        ? `${error.config.baseURL || baseURL}${error.config.url}` 
        : 'unknown';
      
      console.group(`üö® [API Error] ${error.config?.method?.toUpperCase()} ${error.config?.url || 'unknown'}`);
      
      // Error location in code
      console.error('üìç Error Caught At:', {
        file: 'api.js',
        function: 'response interceptor',
        line: '~260',
        stack: error.stack?.split('\n').slice(0, 5).join('\n') || 'No stack trace',
      });
      
      // Error details
      console.error('‚ùå Error Details:', {
        status: error.response?.status || 'N/A (No response received)',
        statusText: error.response?.statusText || 'N/A',
        errorCode: error.code || 'N/A',
        errorMessage: error.message || 'Unknown error',
        errorName: error.name || 'Error',
      });
      
      // Request information
      console.error('üì§ Request Info:', {
        method: error.config?.method?.toUpperCase() || 'GET',
        url: error.config?.url || 'unknown',
        baseURL: error.config?.baseURL || baseURL,
        fullURL: fullURL,
        withCredentials: error.config?.withCredentials,
        timeout: error.config?.timeout,
        headers: error.config?.headers,
      });
      
      // Response information (if available)
      if (error.response) {
        console.error('üì• Response Info:', {
          status: error.response.status,
          statusText: error.response.statusText,
          headers: error.response.headers,
          data: error.response.data,
        });
      } else {
        console.error('üì• Response Info: NO RESPONSE RECEIVED');
        console.error('   ‚ö†Ô∏è This means the request was blocked before reaching the server');
      }
      
      // Browser-specific error detection
      if (error.code === 'ERR_NETWORK' || error.message === 'Network Error') {
        console.group('üîç CHROME BLOCKING DIAGNOSIS');
        console.error('Error Type: Network Error (Request blocked by browser)');
        console.error('Possible Causes:');
        console.error('  1. ‚ùå CSP violation (check Content-Security-Policy header)');
        console.error('  2. ‚ùå CORS preflight failed (check OPTIONS request in Network tab)');
        console.error('  3. ‚ùå HSTS forcing HTTPS (check chrome://net-internals/#hsts)');
        console.error('  4. ‚ùå Browser extension blocking (try Incognito mode)');
        console.error('  5. ‚ùå Mixed content blocking (HTTP from HTTPS page)');
        console.error('');
        console.error('üîß Debugging Steps:');
        console.error(`  1. Open Network tab in Chrome DevTools`);
        console.error(`  2. Look for request: ${fullURL}`);
        console.error(`  3. Check status: (failed), (blocked), or (cancelled)`);
        console.error(`  4. Check Console tab for CSP or CORS errors`);
        console.error(`  5. Check Response Headers for CSP and CORS headers`);
        console.error('');
        console.error('üìã Quick Checks:');
        console.error(`  ‚Ä¢ Backend running? curl ${baseURL.replace('/api/v1', '')}/health`);
        console.error(`  ‚Ä¢ CORS preflight? curl -X OPTIONS ${fullURL} -H "Origin: ${window.location.origin}" -v`);
        console.error(`  ‚Ä¢ VITE_API_BASE_URL: ${import.meta.env.VITE_API_BASE_URL || 'not set'}`);
        console.groupEnd();
      }
      
      // CORS-specific error
      if (error.message?.includes('CORS') || error.code === 'ERR_CORS') {
        console.group('üåê CORS ERROR DETECTED');
        console.error('CORS Error Details:', {
          message: error.message,
          origin: window.location.origin,
          requestedURL: fullURL,
        });
        console.error('Check Response Headers for:');
        console.error('  ‚Ä¢ Access-Control-Allow-Origin');
        console.error('  ‚Ä¢ Access-Control-Allow-Credentials');
        console.error('  ‚Ä¢ Access-Control-Allow-Methods');
        console.groupEnd();
      }
      
      // CSP-specific error
      if (error.message?.includes('CSP') || error.message?.includes('Content Security Policy')) {
        console.group('üõ°Ô∏è CSP ERROR DETECTED');
        console.error('CSP Error Details:', {
          message: error.message,
        });
        console.error('Check Response Headers for Content-Security-Policy');
        console.error('Verify connect-src includes:', fullURL.split('/')[0] + '//' + fullURL.split('/')[2]);
        console.groupEnd();
      }
      
      console.groupEnd();
    }
    
    // Production error tracking (Sentry-ready)
    if (import.meta.env.PROD && typeof window !== 'undefined' && window.Sentry) {
      window.Sentry.captureException(error, {
        tags: {
          api_error: true,
          endpoint: error.config?.url,
          method: error.config?.method,
        },
        extra: {
          status: error.response?.status,
          data: error.response?.data,
          baseURL: error.config?.baseURL || baseURL,
        },
      });
    }
    
    // Standard error logging
    if (error.code === 'ECONNABORTED') {
      logger.error("[API] Request timeout:", error.config?.url);
    } else if (error.code === 'ERR_NETWORK' || error.message === 'Network Error') {
      const fullURL = error.config?.url 
        ? `${error.config.baseURL || baseURL}${error.config.url}` 
        : 'unknown';
      
      logger.error("[API] Network error - check if backend is running:", {
        url: error.config?.url,
        baseURL: error.config?.baseURL || baseURL,
        fullURL,
        method: error.config?.method,
        errorCode: error.code,
        errorMessage: error.message,
      });
    } else {
      logger.error("[API] Error:", {
        message: error.message,
        status: error.response?.status,
        data: error.response?.data,
        url: error.config?.url,
      });
    }

    // STEP 3: Do NOT auto-logout on 401 for notification endpoints
    // Only logout if /auth/me or refresh token fails
    // Notification endpoints might fail due to cookie issues, but user might still be authenticated
    if (status === 401) {
      const url = error.config?.url || '';
      const normalizedUrl = url.toLowerCase();
      
      // Check if this is a critical auth endpoint that should trigger logout
      const isCriticalAuthEndpoint = 
        normalizedUrl.includes('/auth/me') ||
        normalizedUrl.includes('/auth/current-user') ||
        normalizedUrl.includes('/auth/refresh');
      
      // Check if this is a notification endpoint (should NOT trigger logout)
      if (isNotification) {
        // 401 on notification endpoint = might be cookie issue, not auth failure
        if ((typeof __DEV__ !== 'undefined' && __DEV__) || process.env.NODE_ENV !== 'production') {
          console.debug('[API] 401 on notification endpoint - NOT triggering logout');
          console.debug('[API] Endpoints: /notifications, /notifications/:id/read');
          console.debug('[API] This might be a cookie issue. User session may still be valid.');
        }
        // Add a flag to the error so useAuth can handle it differently
        error.isNotificationError = true;
      } else if (isCriticalAuthEndpoint) {
        // 401 on auth endpoint = user is not authenticated (normal state)
        if ((typeof __DEV__ !== 'undefined' && __DEV__) || process.env.NODE_ENV !== 'production') {
          console.debug('[API] User unauthenticated (401) on critical auth endpoint - will trigger logout');
        }
        // Don't set isNotificationError - let useAuth handle logout
      } else {
        // 401 on other endpoint = might be temporary or session issue
        if ((typeof __DEV__ !== 'undefined' && __DEV__) || process.env.NODE_ENV !== 'production') {
          console.debug('[API] 401 on non-critical endpoint - NOT auto-logging out');
        }
      }
    }

    return Promise.reject(error);
  }
);

// CSRF protection temporarily disabled for testing

export default api;
